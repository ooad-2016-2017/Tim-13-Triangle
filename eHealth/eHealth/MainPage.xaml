<Page
    x:Class="eHealth.MainPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:eHealth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="743.802">


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,10,10">
        <StackPanel HorizontalAlignment="Left" Width="440">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF28B1E7"/>
                    <GradientStop Color="#FF1F419A" Offset="0.994"/>
                    <GradientStop Color="#FFB81F90" Offset="0.388"/>
                    <GradientStop Color="#FF28B1E7"/>
                </LinearGradientBrush>
            </StackPanel.Background>


            <Image Height="252" Margin="10,10,10,50" Source="Assets/whatifhealthcare-wordle.jpg" Stretch="Fill" RequestedTheme="Light" />
            <Button Content="Pronađi zdravstvenu ustanovu" Foreground="#FFFFFF"  HorizontalAlignment="Stretch" Margin="0,20,0,10" VerticalAlignment="Stretch" Height="84" FontFamily="Cambria Math" FontSize="30" Background="#33E0D0D0"/>
            <Button Content="Prijavi se" Foreground="#FFFFFF" HorizontalAlignment="Stretch" Margin="0,0,0,10" VerticalAlignment="Stretch" Height="84" Background="#33E0D0D0" FontSize="30"/>
            <Button Content="Registruj se" Foreground="#FFFFFF" HorizontalAlignment="Stretch" Margin="0,0,0,10" VerticalAlignment="Stretch" Height="84" Background="#33E0D0D0" FontSize="30"/>
            <StackPanel Orientation="Horizontal" Margin="51,10,72,10" Height="98">

                <Image Height="100" HorizontalAlignment="Left" Source="Assets/message.png" Margin="30,0,70,0"/>
                <Image Height="101" HorizontalAlignment="Right" Source="Assets/info.png"/>
            </StackPanel>


        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="71" Margin="445,0,0,0" VerticalAlignment="Top" Width="985">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">


                    <GradientStop Color="#FF28B1E7"/>
                    <GradientStop Color="#FF309EDC" Offset="0.355"/>


                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="Dobrodošli na eHealth !" FontSize="48" HorizontalAlignment="Center" FontFamily="Cambria Math" Foreground="White" Margin="177,10,176,0"/>


        </StackPanel>


        <StackPanel HorizontalAlignment="Left"  Margin="445,76,0,0" VerticalAlignment="Top" Width="985" Background="#FFDFF0FF" Height="658">
            <TextBox TextWrapping="Wrap" HorizontalAlignment="Center" Margin="234,50,234,0" Text="Zašto koristiti eHealth?" FontFamily="Cambria Math" FontSize="35" BorderBrush="{x:Null}" SelectionHighlightColor="{x:Null}" Background="{x:Null}"/>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center" Height="458" Width="718" FontSize="22" FontFamily="Cambria Math" Margin="156,40,101.333,0">
                <Run Text="           &#x9;&#x9;&#x9;   "/>
                <LineBreak/>
                <Run Text="Svakodnevno se građani susreću sa lošim sistemom pružanja zdravstvenih usluga. Ono što najviše izaziva frustraciju su dugi redovi čekanja. Pacijenti su često prinuđeni satima čekati na hodnicima dok dođu na red. Gužve otežavaju i rad zdravstvenih radnika jer smanjuju prohodnost u zdravstvenim ustanovama što može biti kobno u kritičnim situacijama kada pacijenti hitno trebaju biti transportovani iz jednog odjela u drugi. Također, pacijenti iz udaljenih krajeva su primorani da troše vrijeme i novac bez garancije da će zaista i dobiti zdravstvenu uslugu. eHealth aplikacija omogućava online zakazivanje pregleda čime bi se riješili navedeni problemi. Često su korisnici zdravstvenih usluga u kantonu Sarajevo ljudi iz drugih kantona. Oni u većini slučajeva nisu upoznati sa lokacijama zdravstvenih ustanova, a ova aplikacija ima mogućnost da im pruži tu informaciju. Veliko olakšanje pacijentima bi bila mogućnost dostave lijeka, pogotovo onima koji imaju određene poteškoće da sami odu do apoteke. eHealth aplikacija omogućava korisnicima da putem Interneta naruče željeni lijek koji će im biti dostavljen na kućnu adresu."/>
                <LineBreak/>
                <Run/>
            </TextBlock>

        </StackPanel>

    </Grid>
</Page>

